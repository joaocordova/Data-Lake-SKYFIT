# ============================================================================
# SKYFIT DATA LAKE - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your credentials
# ============================================================================

# ----------------------------------------------------------------------------
# AZURE DATA LAKE STORAGE
# ----------------------------------------------------------------------------
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_KEY=your_storage_key
ADLS_CONTAINER=datalake

# ----------------------------------------------------------------------------
# POSTGRESQL (Azure Flexible Server)
# ----------------------------------------------------------------------------
PG_HOST=your_server.postgres.database.azure.com
PG_PORT=5432
PG_DATABASE=postgres
PG_USER=your_username
PG_PASSWORD=your_password
PG_SSLMODE=require

# ----------------------------------------------------------------------------
# EVO API (W12 Gym Management)
# ----------------------------------------------------------------------------
EVO_API_URL=https://evo-integracao.w12app.com.br
EVO_API_USERNAME=your_evo_username
EVO_API_PASSWORD=your_evo_password

# ----------------------------------------------------------------------------
# PIPEDRIVE CRM
# ----------------------------------------------------------------------------
PIPEDRIVE_COMPANY_DOMAIN=your_company
PIPEDRIVE_TOKEN_COMERCIAL=your_token_comercial
PIPEDRIVE_TOKEN_EXPANSAO=your_token_expansao

# ----------------------------------------------------------------------------
# ZENDESK SUPPORT
# ----------------------------------------------------------------------------
ZENDESK_SUBDOMAIN=your_subdomain
ZENDESK_EMAIL=your_admin_email
ZENDESK_API_TOKEN=your_api_token
